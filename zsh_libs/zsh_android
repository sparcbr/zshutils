VERSION=1.0.3
type getfullpath 2>&1 >/dev/null || include file
export ANDROID_SDK_ROOT=$(getfullpath "$HOME/androidSDK")
export ANDROID_HOME=$ANDROID_SDK_ROOT
export ANDROID_PLATFORM_TOOLS="$ANDROID_SDK_ROOT/platform-tools"
path+=($ANDROID_HOME $ANDROID_PLATFORM_TOOLS)

if ! type aapt 2>&1 >/dev/null; then
	() {
		local aapt=($ANDROID_HOME/build-tools/*/aapt(*On))
		if [[ $#aapt -gt 0 ]]; then
			ln -s $aapt[1] $HOME/bin/aapt
			return
		else
			include package
			aptinst aapt
		fi
	}
fi

# Get package name from apk file
function getPkg()
{
    #chkCmdInst aapt
    aapt dump badging $1 | grep package:\ name | cut -f2 -d\'
}
return

