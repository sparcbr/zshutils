VERSION=1.0.5

setopt nomultios

function getfilename()
{
	echo "${1:t}"
}

function fullpath()
{
	echo "${1:P}"
}
function getpath()
{
	echo "${1:h}"
}

# ${file%%.old}
function getext()
{
	# echo "${1##*.}"
	echo "${1:e}"
}

function getfilenoext()
{
	echo "${1:t:r}"
}

function isDir()
{
	[[ -d "$1" ]]
}

function isEmptyDir()
{
	local glob=("$1"(N/F))
	[[ -z $glob ]]
}

function noext()
{
	if [[ -n $2 ]]; then
		echo "${1%%.$2}"
	else
		echo "${1:r}"
	fi
}

# Added 2019-04-15 18:36 @TODO
function replace()
{
	local s r
	s=$1 ; r=$2 ; shift 2
	sed -i bak -e s/$1/$2/g "$@"
}

#@TODO
function backup()
{
	local sudo=""
	[[ "$1" == "-s" ]] && { shift; sudo='-s' }
	[[ -n "$2" ]] && {
		run $sudo cp "$1" "$2/$(getfilename "$1").bkup"
	} || run $sudo cp "$1" "$1.bkup"
}

#@TODO
function rename()
{
	local name dir file
	[[ "$1" == '-s' ]] && { shift; sudo='-s' }
	name="$(getfilename "$1")"
	dir="$(getpath "$1")"
	#usr/lib/arm-linux-gnueabihf/libXpm.so.4.11.0
	#usr/lib/arm-linux-gnueabihf/libXtst.so.6.1.0
	[[ -f "$1" || -d "$1" ]] || { color "$1 doesn't exist or no file permission"; return 1 }
	#file=$(dialog --title "Rename" --yes-label Rename --output-fd 1 --inputbox "Rename $1 to: " 10 120 "$name")
	file="$(input -p "Remame \"${C[warn]}$1${C[head]}\" to" $name)" || return $?
	#read "file?Remame \"$1\" to" $name || return $?
	run $sudo mv "$1" "$dir/$file"
}

# Added 2019-05-03 16:50 @TODO
function syncDirs()
{
	local integer n
	local src target data rsArgs checksum
	local quiet sudo ignores dry
	zparseopts -D -M -- q=quiet s=sudo i:=ignores d=dry t:=target c=checksum

	[[ -z "$sudo" ]] && sudo='-S'
	[[ $# -ge 2 ]] || abort 1 "usage: $0 source1 [.. sourceN] target1[,target2]"
	if [[ -n "$1" ]]; then
		target="${@: -1}"
		src=("${@:1:-1}")
	else
		src=($(box get backupdirs))
	fi
	target=($(explode "$target" ','))

	if [[ -z "$target" ]]; then
		target="$(input "Enter target directory")" || abort $?
	fi

	for ((n=1; n<=$#src; n++)); do
		if isDir "${src[$n]}"; then
			src[$n]="${src[$n]}/" #@ TODO check if src==target
		fi
	done
	[[ -n $checksum ]] && checksum=(-c --no-times)
	rsArgs=('-aui' $checksum --exclude=.osync_workdir --exclude='backup*' --exclude='*.local' --exclude='.bsync*')
	[[ -n $ignores ]] && rsArgs+=(--exclude-from="${ignores[2]}")
	[[ -f rsync.ignore ]] && rsArgs+=(--exclude-from=rsync.ignore)
	for dir in $target; do
		if [ ! -d "$dir" ]; then
			if [ ! -e "$dir" ]; then
				confirm "dir $dir doesn't exist. Create" && run $sudo mkdir $dir
			else
				techo -c err "$dir is a file"
			fi
		fi
		if [ -d "$dir" ]; then
			data="$(run $sudo rsync -n ${rsArgs[@]} "$src[@]" "$dir")"
			if [ -n "$data" ]; then
				echo "$data"
				confirm "Do it" && run $sudo rsync "$rsArgs[@]" "$src[@]" "$dir"
			fi

			data="$(run $sudo rsync -n --delete --existing --ignore-existing \
				${rsArgs[@]} "$src[@]" "$dir")"

			if [[ -n "$data" ]]; then
				techo -c warn "Deletions:"
				n=0
				local files
				echo "$data" | while read stat name; do
					echo "$dir/$name ${C[red]}❌$C_"
					files+=($dir/$name)
					((n++))
				done
				confirm -c warn "Delete these $n files" || continue
				rm $(chooser "$files[@]")
				#run $sudo rsync --delete "$rsArgs[@]" "$src[@]"/ "$dir"
			fi
		fi
	done
}

# Added 2019-01-22 18:07:09 @TODO
function syncIhm()
{
	( cd $HOME/PeD/android && {
		syncDirs -i $CFG/android.ignore Treadmill $CLOUD/data/Inbramed/android/Treadmill
		syncDirs -i $CFG/android.ignore Cicloergometer $CLOUD/data/Inbramed/android/Cicloergometer
	  }
	)
}

