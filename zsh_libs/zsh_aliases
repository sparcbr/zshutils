function gvimdiff()
{
	local gopts
	integer ret
	zparseopts -D -M - f=gopts
	diff -u $1 $2
	ret=$?
	if ((ret==0)); then
		techo "$1 == $2"
	elif ((ret == 1)); then
		command gvimdiff $gopts $1 $2
	fi
}

